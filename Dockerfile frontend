# Dockerfile.frontend
FROM node:18 AS build

# Set the working directory inside the container
WORKDIR /usr/src/app

# Copy package.json and pnpm-lock.yaml (or package-lock.json)
COPY package.json pnpm-lock.yaml ./

# Install dependencies for building the frontend
RUN npm install -g pnpm && pnpm install --frozen-lockfile

# Copy frontend source code into the container
COPY src/frontend ./src/frontend

# Build the React app for production
RUN pnpm run build --prefix ./src/frontend

# Serve the app using NGINX (or any other static server)
FROM nginx:alpine

# Copy built files from previous stage to NGINX's html directory
COPY --from=build /usr/src/app/src/frontend/build /usr/share/nginx/html

# Expose port 80 for NGINX to serve the frontend app
EXPOSE 80

# Command to run NGINX in the foreground
CMD ["nginx", "-g", "daemon off;"]
